# Firebase Configuration (Firebase 콘솔에서 확인)
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

# ============================================================
# 로컬 개발 환경 설정 (권장)
# ============================================================

# Firebase Emulator 사용 (로컬 개발 시 true)
NEXT_PUBLIC_USE_FIREBASE_EMULATOR=true

# Firestore REST API가 에뮬레이터를 사용하도록 설정
# 에뮬레이터 실행 시: npm run emulators
FIRESTORE_EMULATOR_HOST=127.0.0.1:8080

# KIS API 환경 설정
# - vts: 모의투자 (SMS 발송 없음, 로컬 개발 권장)
# - prod: 실전투자 (SMS 발송, 배포 환경용)
KIS_ENVIRONMENT=vts

# ============================================================
# KIS API 키 (한국투자증권 개발자 포털에서 발급)
# ============================================================

# 모의투자 (VTS) 설정
KIS_VTS_APP_KEY=
KIS_VTS_APP_SECRET=
KIS_VTS_ACCOUNT_NUMBER=

# 실거래 (Production) 설정
KIS_PROD_APP_KEY=
KIS_PROD_APP_SECRET=
KIS_PROD_ACCOUNT_NUMBER=

# ============================================================
# 기타 API
# ============================================================

# DART 공시정보 API
DART_API_KEY=

# (선택) 서비스 계정 키 파일 경로
GOOGLE_APPLICATION_CREDENTIALS=./service-account.json
