rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 개발/테스트 환경용 규칙 (Emulator)
    // 프로덕션 배포 시에는 더 엄격한 규칙으로 교체해야 합니다.
    
    // 사용자 컬렉션
    match /users/{userId} {
      allow read, write: if true;  // 개발 모드: 모든 접근 허용
    }
    
    // 포트폴리오 컬렉션
    match /portfolios/{portfolioId} {
      allow read, write: if true;  // 개발 모드: 모든 접근 허용
    }
    
    // 보유 종목 컬렉션
    match /holdings/{holdingId} {
      allow read, write: if true;  // 개발 모드: 모든 접근 허용
    }
    
    // 분석 리포트 컬렉션 (캐시)
    match /analysisReports/{reportId} {
      allow read, write: if true;  // 개발 모드: 모든 접근 허용
    }
    
    // 알림 컬렉션
    match /alerts/{alertId} {
      allow read, write: if true;  // 개발 모드: 모든 접근 허용
    }
    
    // 기타 모든 문서
    match /{document=**} {
      allow read, write: if true;  // 개발 모드: 모든 접근 허용
    }
  }
}
